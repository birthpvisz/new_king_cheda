<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectionsActivity"
    android:background="@drawable/collections">


    <Button
        android:id="@+id/collections_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/input_design"
        android:fontFamily="@font/antic"
        android:padding="20dp"
        android:text="Collections"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/discover_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="35dp"
        android:layout_below="@+id/collections_btn"
        android:background="@drawable/input_design"
        android:fontFamily="@font/antic"
        android:padding="20dp"
        android:text="Discover"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/community_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="35dp"
        android:layout_below="@+id/discover_btn"
        android:background="@drawable/input_design"
        android:fontFamily="@font/antic"
        android:padding="20dp"
        android:text="Community"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"/>
</RelativeLayout>