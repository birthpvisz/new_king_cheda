<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity">


    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="26sp"

        />

        <ImageView
            android:id="@+id/head_phones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/headphoness"
            android:layout_below="@+id/slogan_category"/>

    <ImageView
        android:id="@+id/games"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/head_phones"
        android:layout_marginTop="62dp"
        android:src="@drawable/games" />

    <ImageView
        android:id="@+id/ssd"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/games"
        android:layout_marginTop="55dp"
        android:src="@drawable/ssd" />

    <ImageView
        android:id="@+id/pads"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/ssd"
        android:layout_marginTop="62dp"
        android:src="@drawable/pads" />

    <TextView
        android:id="@+id/text_head_phones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_phones"
        android:layout_marginTop="-51dp"
        android:layout_marginRight="60dp"
        android:gravity="center_horizontal"
        android:text="Headphones"
        android:textSize="26sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/text_games"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_phones"
        android:layout_marginTop="91dp"
        android:layout_marginRight="100dp"
        android:gravity="center_horizontal"
        android:text="Games"
        android:textSize="26sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/text_ssd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_phones"
        android:layout_marginTop="265dp"
        android:layout_marginRight="100dp"
        android:gravity="center_horizontal"
        android:text="SSD"
        android:textSize="26sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/text_pads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_phones"
        android:layout_marginTop="380dp"
        android:layout_marginRight="100dp"
        android:gravity="center_horizontal"
        android:text="PADS"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/butons"
        android:text="Main Products"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_above="@+id/check_orders_btn"
        />

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/butons"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_above="@+id/admin_logout_btn"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/butons"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />



</RelativeLayout>